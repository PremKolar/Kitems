<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToKiteList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#276A49</item>
        <item name="colorPrimaryVariant">#246646</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8B7E02</item>
        <item name="colorSecondaryVariant">#2D485B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accentDark</item>
        <item name="background">@color/backgroundDark</item>
        <item name="colorBackgroundFloating">@color/backgroundDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="toolbarStyle">@color/black</item>-->
    </style>
</resources>