<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/listFragment">





    <fragment
        android:id="@+id/checkedListFragment"
        android:name="com.nk.tokitelist.fragments.list.CheckedListFragment"
        android:label="CheckedList"
        tools:layout="@layout/fragment_checked_list" >
        <action
            android:id="@+id/action_checkedListFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            />
    </fragment>



    <fragment
        android:id="@+id/listFragment"
        android:name="com.nk.tokitelist.fragments.list.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_listFragment_to_checkedListFragment"
            app:destination="@id/checkedListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.nk.tokitelist.fragments.AddItemFragment"
        android:label="Add Item"
        tools:layout="@layout/fragment_add_item" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
             />
        <argument
            android:name="currentKitem"
            app:argType="com.nk.tokitelist.data.models.KiteItem" />
    </fragment>
</navigation>